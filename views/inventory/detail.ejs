<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>

<main class="vehicle-detail">
  <h1><%= vehicle.inv_make %> <%= vehicle.inv_model %></h1>
  <div class="detail-container">
    <img src="/images/inventory/<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
    <div class="detail-content">
      <h2><%= vehicle.inv_make %> <%= vehicle.inv_model %> Details</h2>
      <p><strong>Year:</strong> <%= vehicle.inv_year %></p>
      <p><strong>Price:</strong> <%= vehicle.inv_price.toLocaleString('en-US', { style: 'currency', currency: 'USD' }) %></p>
      <p><strong>Mileage:</strong> <%= vehicle.inv_mileage.toLocaleString('en-US') %> miles</p>
      <p><strong>Description:</strong> <%= vehicle.inv_description %></p>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs') %>